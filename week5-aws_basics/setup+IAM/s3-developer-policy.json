{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Sid": "ListAllBuckets",
			"Effect": "Allow",
			"Action": [
				"s3:ListAllMyBuckets",
				"s3:GetBucketLocation"
			],
			"Resource": "*"
		},
		{
			"Sid": "ReadWriteDevBucket",
			"Effect": "Allow",
			"Action": [
				"s3:GetObject",
				"s3:PutObject",
				"s3:DeleteObject",
				"s3:ListBucket"
			],
			"Resource": [
				"arn:aws:s3:::my-app-dev-bucket-*",
				"arn:aws:s3:::my-app-dev-bucket-*/*"
			]
		}
	]
}
